<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/n_padding_normal_b"
    android:orientation="horizontal"
    android:weightSum="6"
    android:layout_height="@dimen/min_cover_list_item_height">
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@id/main_cover_name"
            android:layout_margin="@dimen/n_padding_normal"
            android:text="分类名称"
            android:textColor="@color/eggplant"
            android:textSize="@dimen/button_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@id/main_cover_number"
            android:text="共0件商品"
            android:layout_margin="@dimen/n_padding_normal"
            android:layout_width="match_parent"
            android:textColor="@color/grey_light"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"></LinearLayout>
    <LinearLayout
        android:id="@id/btn_cover_layout"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:weightSum="2"
        android:visibility="gone"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="match_parent">
            <LinearLayout
                android:id="@id/main_cover_item_edit"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/modify_pencil"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_margin="@dimen/n_padding_normal_b"
                android:background="@color/gray"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@id/main_cover_item_del"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center_vertical|center_horizontal"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/delete_bin"
                    android:layout_height="wrap_content" />
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
