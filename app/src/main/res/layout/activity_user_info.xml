<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.trade.bluehole.trad.UserInfoActivity">

    <com.yalantis.phoenix.PullToRefreshView
        android:id="@+id/pull_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/user_info_layout1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/eggplant">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                            <TextView
                                android:layout_weight="0.3"
                                android:layout_width="0dp"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="账号"
                                android:textColor="#ffffff"
                                android:layout_height="20dp" />
                        <EditText android:id="@+id/account" android:layout_weight="0.7" android:layout_width="0dp"
                            android:textColor="#ffffff"  android:shadowColor="#ffffff"
                            android:layout_height="wrap_content" android:hint="@string/prompt_email"
                            android:inputType="textEmailAddress" android:maxLines="1" android:text=""
                            android:singleLine="true" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                            <TextView
                                android:layout_weight="0.3"
                                android:layout_width="0dp"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="昵称"
                                android:textColor="#ffffff"
                                android:layout_height="20dp" />
                        <EditText android:id="@+id/nickName" android:layout_weight="0.7" android:layout_width="0dp"
                            android:textColor="#ffffff"  android:shadowColor="#ffffff"
                            android:layout_height="wrap_content" android:hint="昵称"
                            android:inputType="textEmailAddress" android:maxLines="1" android:text=""
                            android:singleLine="true" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                            <TextView
                                android:layout_weight="0.3"
                                android:layout_width="0dp"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="真实姓名"
                                android:textColor="#ffffff"
                                android:layout_height="20dp" />
                        <EditText android:id="@+id/realName" android:layout_weight="0.7" android:layout_width="0dp"
                            android:textColor="#ffffff"  android:shadowColor="#ffffff"
                            android:layout_height="wrap_content" android:hint="真实姓名"
                            android:inputType="textEmailAddress" android:maxLines="1" android:text=""
                            android:singleLine="true" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                            <TextView
                                android:layout_weight="0.3"
                                android:layout_width="0dp"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="手机号码"
                                android:textColor="#ffffff"
                                android:layout_height="20dp" />
                        <EditText android:id="@+id/mobile" android:layout_weight="0.7" android:layout_width="0dp"
                            android:textColor="#ffffff"  android:shadowColor="#ffffff"
                            android:layout_height="wrap_content" android:hint="手机号码"
                            android:inputType="textEmailAddress" android:maxLines="1" android:text=""
                            android:singleLine="true" />
                    </LinearLayout>






                </LinearLayout>
                <LinearLayout
                    android:id="@+id/user_info_layout2"
                    android:layout_below="@id/user_info_layout1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height"
                    android:background="@color/saffron">
                    <ImageView
                        android:id="@+id/user_head_img"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/user_info_layout3"
                    android:layout_below="@id/user_info_layout2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_item_height"
                    android:background="@color/sienna">
                </LinearLayout>
                </RelativeLayout>
        </ScrollView>
    </com.yalantis.phoenix.PullToRefreshView>
</RelativeLayout>
