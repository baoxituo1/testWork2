<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="@dimen/n_padding_normal_b"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="@dimen/n_padding_normal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/head_background"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="@dimen/n_padding_normal"
            android:weightSum="3"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="@dimen/n_padding_normal"
                android:layout_width="match_parent"
                android:text="美丽的商品还是我的最爱"
                android:textColor="@color/eggplant"
                android:textSize="@dimen/button_text_size"
                android:layout_weight="1"
                android:layout_height="0dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/n_padding_normal"
                android:textSize="@dimen/button_text_size"
                android:text="$200.00"
                android:textColor="@color/primary"
                android:layout_weight="1"
                android:layout_height="0dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="@dimen/n_padding_normal"
                android:layout_weight="1"
                android:weightSum="3"
                android:layout_height="0dp">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:textSize="@dimen/sample_text_size"
                        android:text="总销量20件"
                        android:layout_height="match_parent" />
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:textSize="@dimen/sample_text_size"
                        android:gravity="center_horizontal"
                        android:text="库存30件"
                        android:layout_height="match_parent" />
                    <TextView
                        android:gravity="right"
                        android:textSize="@dimen/sample_text_size"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:text="03-31"
                        android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_height="20dp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
             <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                fancy:borderWidth="2dp"
                fancy:defaultColor="@color/saffron"
                fancy:focusColor="#8cc9f8"
                fancy:fontIconResource="@string/main_eye"
                fancy:fontIconSize="10sp"
                fancy:iconPosition="top"
                fancy:textColor="#FFFFFF"/>
            </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_margin="2dp"
            android:layout_height="match_parent"
            android:background="@color/note"
            />
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                fancy:borderWidth="2dp"
                fancy:defaultColor="@color/saffron"
                fancy:focusColor="#8cc9f8"
                fancy:fontIconResource="@string/main_copy_url"
                fancy:fontIconSize="10sp"
                fancy:iconPosition="top"
                fancy:textColor="#FFFFFF"/>
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_margin="2dp"
            android:layout_height="match_parent"
            android:background="@color/note"
            />
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <mehdi.sakout.fancybuttons.FancyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                fancy:borderWidth="2dp"
                fancy:defaultColor="@color/saffron"
                fancy:focusColor="#8cc9f8"
                fancy:fontIconResource="@string/main_shar"
                fancy:fontIconSize="10sp"
                fancy:iconPosition="top"
                fancy:textColor="#FFFFFF"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
